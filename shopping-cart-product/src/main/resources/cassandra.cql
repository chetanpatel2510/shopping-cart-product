CREATE KEYSPACE IF NOT EXISTS PRODUCT_KEY_SPACE WITH replication = {'class':'SimpleStrategy', 'replication_factor':1};

CREATE TABLE PRODUCT_KEY_SPACE.PRODUCT (
	ID BIGINT,
	PRODUCT_NAME TEXT,
	PRODUCT_CODE TEXT, 
	PRODUCT_DESC TEXT, 
	PRODUCT_CATEGORY TEXT,
	PRODUCT_PRICE DECIMAL,
	MARKETING_START_DATE DATE,
	MARKETING_END_DATE DATE,
	CREATED_BY TEXT,
	CREATED_ON TIMESTAMP,
	LAST_UPDATED_BY TEXT,
	LAST_UPDATED_ON TIMESTAMP,
	PRIMARY KEY (PRODUCT_CODE, PRODUCT_CATEGORY)
);
